#: docs/pdns.xml:16103
msgid "oracle-basic-query"
msgstr ""

#. type: Content of: <book><appendix><sect1><sect2><sect3><para><variablelist><varlistentry><listitem><simpara>
#: docs/pdns.xml:16106
msgid "Looking for records based on owner name and type. Default:"
msgstr ""

#. type: Content of: <book><appendix><sect1><sect2><sect3><para><variablelist><varlistentry><listitem><programlisting>
#: docs/pdns.xml:16109
#, no-wrap
msgid ""
