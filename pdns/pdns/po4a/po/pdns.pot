#. type: Content of: <book><appendix><sect1><para><programlisting>
#: docs/pdns.xml:17619
#, no-wrap
msgid ""
"\tclass DNSBackend\n"
"\t{\n"
"\tpublic:\n"
"\n"
"\tvirtual void lookup(const QType &amp;qtype, const string &amp;qdomain, "
"DNSPacket *pkt_p=0, int zoneId=-1)=0;\n"
"\tvirtual bool list(const string &amp;target, int domain_id)=0;\n"
"\tvirtual bool get(DNSResourceRecord &amp;r)=0;\n"
"\tvirtual bool getSOA(const string &amp;name, SOAData &amp;soadata, "
"DNSPacket *p=0);\n"
"\t};\n"
"\t"
