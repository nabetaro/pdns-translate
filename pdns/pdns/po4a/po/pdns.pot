#: docs/pdns.xml:11529
#, no-wrap
msgid ""
"sql> select id from domains where name='example.com';\n"
"7\n"
"sql> insert into domainmetadata (domain_id, kind, content) values "
"(7,'ALLOW-AXFR-FROM','AUTO-NS');\n"
"sql> insert into domainmetadata (domain_id, kind, content) values "
"(7,'ALLOW-AXFR-FROM','2001:db8::/48');\n"
